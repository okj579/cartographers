{
  "arrowParens": "always",
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "bracketSpacing": true,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 140,
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "endOfLine": "auto"
}
